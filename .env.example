# Frontend Environment Variables

# API Configuration
NUXT_PUBLIC_API_URL=http://localhost:3001/api

# Authorizer Configuration (public variables only)
NUXT_PUBLIC_AUTHORIZER_URL=https://auth.claimready.io
NUXT_PUBLIC_AUTHORIZER_CLIENT_ID=your_client_id
NUXT_PUBLIC_AUTHORIZER_REDIRECT_URL=http://localhost:3000

# New Relic Browser Monitoring (optional - only needed in production/staging)
# Get configuration from: https://one.newrelic.com/nr1-core (Browser → Your App → Application Settings)
NEW_RELIC_ENABLED=false  # Set to true to enable New Relic Browser monitoring

# Browser Agent Configuration (required when NEW_RELIC_ENABLED=true)
# These values come from the New Relic Browser agent snippet
NEW_RELIC_BROWSER_LICENSE_KEY=your_browser_license_key
NEW_RELIC_BROWSER_APPLICATION_ID=your_browser_app_id
NEW_RELIC_BROWSER_ACCOUNT_ID=your_account_id
NEW_RELIC_BROWSER_TRUST_KEY=your_trust_key
NEW_RELIC_BROWSER_AGENT_ID=1.latest

# Optional: Custom beacon endpoints (use defaults unless you have custom setup)
NEW_RELIC_BROWSER_BEACON=bam.nr-data.net
NEW_RELIC_BROWSER_ERROR_BEACON=bam.nr-data.net

# PostHog Analytics (product analytics with session replay)
# Get API key from: https://posthog.com/ or your self-hosted instance
NUXT_PUBLIC_POSTHOG_API_KEY=your_posthog_api_key  # Project API key from PostHog

# Stripe Publishable Key (used by frontend for Stripe.js)
NUXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key

# Notification Provider Configuration
# Options: 'socketio' (local dev), 'firebase-rtdb' (staging/prod), 'auto' (default)
NUXT_PUBLIC_NOTIFICATION_PROVIDER=auto

# Firebase Configuration (required for firebase-rtdb notifications)
# Get these from Firebase Console: Project Settings → General
NUXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NUXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NUXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NUXT_PUBLIC_FIREBASE_DATABASE_URL=https://your-project-default-rtdb.firebaseio.com
